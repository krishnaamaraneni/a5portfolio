<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/header %>
</head>

<body id="page-top">
    <!-- Navigation-->
    <% include ./partials/navmenu %>

    <section id="contact ">
        <div class="container">
            <div class="error_container">
                <h2 class="text-center text-uppercase text-danger mt-5 mb-0">
                    Business Contacts List
                </h2>
                <hr class="star-dark mb-5" />
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Name (Alphabetically Sorted)</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Email</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (post.length < 1) { %>

                            <div>
                                <p class="text-info"><b> <span style="text-decoration: underline;">Note:</span> For test functionality please add some Dummy Data by clicking below</b></p>
                                <a href="/adddata" class="mb-5">
                                    <button onclick="window.history.back()" class="btn btn-secondary btn-sm mb-3"><i class="fas fa-plus"></i> Add Dummy Data </button>
                                </a>
                            </div>
                        <%} else { %>
                        <p> </p>
                        <% } %>

                        <% post.forEach(function(posts){ %>
                        <tr>
                            <th scope="row"><%= posts.name %></th>
                            <td><%= posts.number %></td>
                            <td><%= posts.email %></td>
                            <td><a href="/editcontact/<%=posts._id%>"><i style="cursor: pointer; font-size: 23px;"
                                        class="far fa-edit"></i></a></td>
                            <td>
                                <form id='delete' action='/delete/<%=posts._id%>?_method=DELETE' method='POST'>
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        <i style="cursor: pointer; font-size: 15px;" class="far fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <a href="/dashboard"  class="btn btn-secondary btn-sm"><i class="fas fa-chevron-left"></i> Go Back</a>
            </div>
        </div>
    </section>

    <!--Footer-->
    <% include ./partials/footer %>
</body>

</html>